#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe!"
game = Game.new
until game.won?
  game.play
end


play_again = ""
puts "Would you like to play again? ('y' or 'n')"
play_again = gets.strip
if play_again = "y"
  game = Game.new
  until game.won?
    game.play
  end
end
