#!/usr/bin/env ruby

require_relative '../config/environment'

  puts "Welcome to Tic Tac Toe!"
  puts
  puts "How many players? (0, 1, 2)"
  players = gets.strip
  if players == "0"
    wargames = (Players::Computer.new("X"),player_2 = Players::Computer.new("O"), board = Board.new)
    game = Game.new(wargames)
    until game.won?
      game.play
    end
  elsif players == "1"
    single_player = (Players::Human.new("X"),player_2 = Players::Computer.new("O"), board = Board.new)
  else
    two_players = (Players::Computer.new("X"),player_2 = Players::Computer.new("O"), board = Board.new)
  end





  play_again = ""
  puts "Would you like to play again? ('y' or 'n')"
  play_again = gets.strip
  if play_again == "y"
    game = Game.new
    until game.won?
      game.play
    end
  end
